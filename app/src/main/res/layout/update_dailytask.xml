<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:id="@+id/bottomSheetContainer"
    >

    <TextView
        android:id="@+id/header_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit your daily goals"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textAlignment="center"
        android:padding="16dp"
        android:background="@color/comunity"
        android:textColor="#fff"
        />


    <EditText
        android:id="@+id/edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_text"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/custom_button"
        android:elevation="5dp"
        android:hint="Your Title"
        android:padding="10dp"
        android:textAlignment="center" />

    <EditText

        android:id="@+id/edit_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_title"
        android:hint="Your description"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/custom_button"
        android:elevation="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        />

    <Button
        android:id="@+id/c_butn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:padding="15dp"
        android:background="@drawable/custom_button"
        android:backgroundTint="@color/comunity"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_below="@id/edit_description"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="6dp"
        android:textAlignment="center"


        />
    <Button
        android:id="@+id/edit_button"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:padding="15dp"
        android:background="@drawable/custom_button"
        android:backgroundTint="@color/comunity"
        android:layout_toEndOf="@+id/c_butn"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_below="@+id/edit_description"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="40dp"
        android:textAlignment="center"
        android:layout_marginEnd="6dp"


        />


</RelativeLayout>